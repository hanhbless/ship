<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:padding="@dimen/margin_gigatic">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_huge"
            android:background="@drawable/round_cell_white"
            android:orientation="vertical"
            android:padding="@dimen/margin_normal">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/icon_size_row"
                android:layout_height="@dimen/icon_size_row"
                android:layout_centerVertical="true"
                android:src="@mipmap/ic_launcher" />

            <shipper.com.ads.widget.TextViewPlus
                android:id="@+id/tvHeader"
                style="@style/Dialog.TextViewHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/icon"
                android:text="Wifi Chùa 2016" />

            <shipper.com.ads.widget.TextViewPlus
                android:id="@+id/tvDes"
                style="@style/Dialog.TextViewDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHeader"
                android:layout_toRightOf="@+id/icon"
                android:text="Ứng dụng nâng cấp của phần mềm Wifi chùa 2015 với nhiều chức năng mới." />

            <shipper.com.ads.widget.ButtonPlus
                android:id="@+id/btnGetApp"
                style="@style/Dialog.Button"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDes"
                android:layout_margin="@dimen/margin_huge"
                android:text="@string/get_app_for_free" />

        </RelativeLayout>

        <ImageView
            android:id="@+id/icon_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/icon_dismiss_dialog" />
    </FrameLayout>

</RelativeLayout>